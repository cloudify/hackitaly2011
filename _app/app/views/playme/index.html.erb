<div data-role="page" id="play">	
  <div data-role="navbar">
    <ul>
      <li><a href="/playme" class="ui-btn-active">Play</a></li>
      <li><a href="/topusers">Leaderboard</a></li>
    </ul>
  </div>
  <div data-role="content">
    <h2>Guess the Track</h2>
    <ul data-role="listview">
      <% @data.each do |song| %>
        <li>
            <img src="<%= song[:image] %>">
            <h3><a href="/playme/submitresult?result=<%= song[:id]%>"><%= song[:name] %></a></h3>
            <p><%= song[:artist] %></p>
        </li>
      <% end %>
    </ul>
    <div class="player" data-mp3="<%= @mp3 %>"></div>
  </div>
</div>
