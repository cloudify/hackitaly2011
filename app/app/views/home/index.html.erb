<html>
	<head>
		<link href="http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.css" media="screen" rel="stylesheet" type="text/css" />
    <script src="http://code.jquery.com/jquery-1.5.min.js"></script>
	  <script src="http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.js"></script>
	</head>
	<body>
	<% if @current_user.nil? %>
	  <div data-role="page" id="login">
     	<div data-role="header">
     		<h1>Login</h1>
     	</div>
     	<div data-role="content">
    		<form method="POST" action="/home/login">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    			email: <input type="text" name="login">
    			<input type="submit" value="login">
    		</form>
     	</div>
     	<div data-role="footer">
     		<h4>Page Footer</h4>
     	</div>
    </div>
     
    <% else %>
    <div data-role="page" id="play">
     	<div data-role="header">
     	  <h1>Play!</h1>
     	</div>

   	<a href="/home/logout">Sign out</a>
   	<% end %>
     
	</body>
</html>

